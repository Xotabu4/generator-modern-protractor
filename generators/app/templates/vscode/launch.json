{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceRoot}/node_modules/protractor/bin/protractor",
      "args": [
        "${workspaceRoot}/config/config.js",
        // "--specs"
        // Change to path to single spec file that should be debugged
        // "./specs/user.settings.spec.ts",
        // "--grep", 
        // Use this to run only tests names that includes matching string
        // "C1233"
      ],
      "env": {
        "DEBUG": "1"
        // Specify your environment variables here, if needed
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
